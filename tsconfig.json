{
    "compilerOptions": {
        "target": "ES2016",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "**/*.spec.ts",
        "./coverage"
    ]
}